<h1>Listing artworks</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Created on</th>
    <th>User</th>
    <th>Subfolder</th>
    <th>Reviewed</th>
    <th>Maintenance</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @artworks.each do |artwork| %>
  <tr>
    <td><%= artwork.title %></td>
    <td><%= artwork.description %></td>
    <td><%= artwork.created_on %></td>
    <td><%= artwork.user_id %></td>
    <td><%= artwork.subfolder_id %></td>
    <td><%= artwork.reviewed %></td>
    <td><%= artwork.maintenance %></td>
    <td><%= link_to 'Show', artwork %></td>
    <td><%= link_to 'Edit', edit_artwork_path(artwork) %></td>
    <td><%= link_to 'Destroy', artwork, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

