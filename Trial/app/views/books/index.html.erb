<h1 class="pageheader">Listing books</h1>
<br>
<div class="pagebox"><%= paginate @books %></div>
<br>
<% @books.each do |book| %>
   <div class="outer">
      <table>
         <tr>
            <td><%= link_to book.title, sbook_book_path(book.sbook, book) %></td>
            <td><%= button_to 'Edit', edit_sbook_book_path(book.sbook, book), method: :get %></td>
            <td><%= button_to 'Destroy', [book.sbook, book], method: :delete, data: { confirm: 'Are you sure?' } %></td>
         </tr>
      </table>
   </div>
   <div class="inner">
      <p><%= book.description %></p>
   </div>
   <div class="outer">
      <p>Created on: <%= book.created_on %></p>
      <p>Author: <%= book.user.vname %></p>
      <p>Series: <%= book.sbook.name %></p>
   </div>
   <br>
<% end %>
