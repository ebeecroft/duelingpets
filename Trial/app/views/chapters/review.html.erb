   <div class="inner"><%= button_to 'Deny', chapters_review2_path(:chapter_id=>chapter.id), method: :post %></div>
   <br>
   <!--This should no longer be in a table-->
   <div class="inner">
      <table>
         <tr>
            <td><%= chapter.story %></td>
         </tr>
