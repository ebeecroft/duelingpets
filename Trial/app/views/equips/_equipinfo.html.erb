<% @equips.each_with_index do |equip, index| %>
   <div class="inner">
      <div class="outer">
         <p><%= link_to equip.inventory.item.name, item_path(equip.inventory.item.name) %>
         <% if !current_user.nil? %> <!---Difference when current_user is nil-->
            <%= button_to 'Destroy', [equip.petowner, equip], method: :delete, data: { confirm: 'Are you sure?' } %>
         <% end %>
         </p>
      </div>
      <div class="inner">
         <p><%= image_tag equip.inventory.item.ipicture_url(:thumb).to_s %></p>
      </div>
      <div class="inner">
         <table>
            <tr>
               <td>HP: <%= equip.inventory.item.hp %></td>
            </tr>
            <tr>
               <td>ATK: <%= equip.inventory.item.atk %></td>
            </tr>
            <tr>
               <td>DEF: <%= equip.inventory.item.def %></td>
            </tr>
            <tr>
               <td>SPD: <%= equip.inventory.item.spd %></td>
            </tr>
         </table>
      </div>
      <% if !getOptional %>
         <div class="outer">
            <p>Belongs to pet: <%= equip.petowner.pet_name %></p>
         </div>
      <% end %>
   </div>
   <!--Sets how many pets to display per line-->
   <% if ((index + 1)%3) == 0 %>         
      <div class="outer"></div>
   <% end %>
<% end %>
