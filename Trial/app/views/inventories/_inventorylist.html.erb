<table>
   <tr>
      <td>Vname</td>
      <td>&nbsp;&nbsp;Item name</td>
      <td></td>
   </tr>
   <% @inventories.each_with_index do |inventory, index| %>
      <tr>
         <td><%= inventory.user.vname %></td>
         <td>&nbsp;&nbsp;<%= inventory.item.name %></td>
         <td><%= button_to 'Destroy', [inventory.user, inventory], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
   <% end %>
</table>
