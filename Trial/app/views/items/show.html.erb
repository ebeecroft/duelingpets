<p id="notice"><%= notice %></p>

<p>
<%= image_tag @item.ipicture_url(:thumb).to_s %>
</p>

<p>
  <b>Name:</b>
  <%= @item.name %>
  <%= button_to 'Destroy', @item, method: :delete, data: { confirm: 'Are you sure?' } %>
</p>

<p>
  <b>Description:</b>
  <%= @item.description %>
</p>

<p>
  <b>Created on:</b>
  <%= @item.created_on.strftime("%B-%d-%Y") %>
</p>

<%= link_to 'Back', items_path %>
