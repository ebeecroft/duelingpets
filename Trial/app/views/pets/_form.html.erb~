<%= form_for @pet, :html => {:multipart => true} do |f| %>
  <% if @pet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pet.errors.count, "error") %> prohibited this pet from being saved:</h2>

      <ul>
      <% @pet.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :species_name %><br />
    <%= f.text_field :species_name %>
  </div>
  <div class="field">
    <%= f.file_field :image %>
  </div>
  <div class="field">
    <%= f.label :remote_image_url, "or image URL" %><br/>
    <%= f.text_field :remote_image_url %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :monster %>?<br />
    <%= f.check_box :monster %>
  </div>
  <div class="field">
    <%= f.label :level %><br />
    <%= f.text_field :level %>
  </div>
  <div class="field">
    <%= f.label :hp %><br />
    <%= f.text_field :hp %>
  </div>
  <div class="field">
    <%= f.label :atk %><br />
    <%= f.text_field :atk %>
  </div>
  <div class="field">
    <%= f.label :def %><br />
    <%= f.text_field :def %>
  </div>
  <div class="field">
    <%= f.label :spd %><br />
    <%= f.text_field :spd %>
  </div>
  <div class="field">
    <%= f.label :cost %><br />
    <%= f.text_field :cost %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
