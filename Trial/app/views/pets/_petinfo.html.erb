<% @pets.each_with_index do |pet, index| %>
   <% if pet.reviewed? && !pet.monster? %>
      <div class="inner">
      <table>
      <tr>
         <td>
    <p><%= link_to pet.species_name, pet %><% if !current_user.nil? %><!---Difference when current_user is nil--><%= radio_button_tag :pet_id, pet.id %><% end %></p></td>
      </tr>
      <tr>
         <td><%= image_tag pet.image_url(:thumb).to_s %></td>
      </tr>
    </table>
</div>
<div class="inner">
   <table>
      <tr>
         <td>Level: <%= pet.level %></td>
      </tr>
      <tr>
         <td>HP: <%= pet.hp %></td>
      </tr>
      <tr>
         <td>ATK: <%= pet.atk %></td>
      </tr>
      <tr>
         <td>DEF: <%= pet.def %></td>
      </tr>
      <tr>
         <td>SPD: <%= pet.spd %></td>
      </tr>
      <tr>
         <td>Cost: <%= pet.cost %></td>
      </tr>
      <tr>
         <td>Creator: <%= pet.created_by %></td>
      </tr>
   </table>
</div>
      <!--Sets how many pets to display per line-->
      <% if ((index + 1)%3) == 0 %>         
         <div class="outer"></div>
      <% end %>
   <% end %>
<% end %>
