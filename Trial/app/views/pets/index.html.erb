<h1>Listing pets</h1>
<% if @count > 0 %>
   <% if !current_user.nil? %>
   <%= form_tag(new_user_petowner_path(current_user), method: "get") do %>
      <% @pets.each_with_index do |pet, index| %>
         <% if pet.reviewed  && !pet.monster? %>
            <%#= render 'petinfo', object: pet %>
            <div class="inner">
               <table>
                  <tr>
                     <td><%= link_to pet.species_name, pet %></td>
                     <!--Prevents a visting user from seeing the radio button of a pet if not logged in -->
                     <% if !current_user.nil? %>
                        <td><%= radio_button_tag :pet_id, pet.id %></td>
                     <% end %>
                  </tr>
                  <tr>
                     <td></td>
                     <td>Level: <%= pet.level %></td>
                  </tr>
                  <tr>
                     <td></td>
                     <td>HP: <%= pet.hp %></td>
                  </tr>
                  <tr>
                     <td></td>
                     <td>ATK: <%= pet.atk %></td>
                  </tr>
                  <tr>
                     <td></td>
                     <td>DEF: <%= pet.def %></td>
                  </tr>
                  <tr>
                     <td></td>
                     <td>SPD: <%= pet.spd %></td>
                  </tr>
                  <tr>
                     <td></td>
                     <td>Cost: <%= pet.cost %></td>
                  </tr>
                  <tr>
                     <td></td>
                     <!--Displays the user who created this pet -->
                     <td>Creator: <%= pet.created_by %></td>
                  </tr>
                  <tr>
                     <td></td>
                     <!--Displays the date the pet was created -->
                     <td>Created_on: <%= pet.created_on %></td>
                  </tr>
                  <tr>
                     <td colspan="2"><%= pet.description %></td>
                  </tr>
               </table>
            </div>
            <!--Sets how many pets to display per line-->
            <% if ((index + 1)%3) == 0 %>         
               <div class="outer">
               </div>
            <% end %>
         <% end %>
      <% end %>
      <!--Prevents a visting user from adopting a pet if not logged in -->
      <% if !current_user.nil? %>
         <%= submit_tag("Adopt Selected Pet") %>
      <% end %>
   <% end %>
   <% else %>

   <% end %>
<% end %>

<!--Prevents a visting user from creating a pet if not logged in -->
<% if !current_user.nil? %>
   <p><%= link_to 'New Pet', new_pet_path %></p>
<% end %>
