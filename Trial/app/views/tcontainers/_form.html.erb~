<%= form_for(@tcontainer) do |f| %>
  <% if @tcontainer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tcontainer.errors.count, "error") %> prohibited this tcontainer from being saved:</h2>

      <ul>
      <% @tcontainer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :forum_id %><br />
    <%= f.number_field :forum_id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
