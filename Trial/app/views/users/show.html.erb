<p id="notice"><%= notice %></p>

<p>
  <b>First name:</b>
  <%= @user.first_name %>
</p>

<p>
  <b>Last name:</b>
  <%= @user.last_name %>
</p>

<p>
  <b>Email:</b>
  <%= @user.email %>
</p>

<p>
  <b>Vname:</b>
  <%= @user.vname %>
</p>

<p>
  <b>Joined on:</b>
  <%= @user.joined_on %>
</p>

<p>Users owned pets</p>
<table border="1">
   <tr>
      <th>Pet_id</th>
      <th>Pet_name</th>
      <th>Species_name</th>
      <th>Description</th>
   </tr>
<% @user.petowners.each do |petowner| %>
   <% if petowner.user_id == @user.id %>
      <tr>
         <td><%= petowner.pet_id %></td>
         <td><%= petowner.pet_name %></td>
         <td><%= petowner.pet.species_name %></td>
         <td><%= petowner.pet.description %></td>
      </tr>
   <% end %>
<% end %>
</table>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
